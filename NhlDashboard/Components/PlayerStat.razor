    <Column>
        <Heading Size="HeadingSize.Is2" TextWeight="TextWeight.Bold">@Label</Heading>
    </Column>
    <Column>
        <Heading Size="HeadingSize.Is4">@ChildContent</Heading>
    </Column>
</Row>

@code {

    [Parameter] public string Label { get; set; } = "";
    [Parameter] public RenderFragment ChildContent { get; set; }
}